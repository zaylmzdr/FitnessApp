<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Fitness Egzersizleri"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/gridLayoutExercises"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/cardioLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onExerciseClicked"
            android:orientation="horizontal"
            android:background="@drawable/rounded_border"
            android:padding="16dp">

            <ImageView
                android:layout_width="143dp"
                android:layout_height="108dp"
                android:contentDescription="Exercise Image"
                android:scaleType="centerCrop"
                android:src="@drawable/kardiyo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:text="KARDİYO EGZERSİZLERİ"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="italic|bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/enduranceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onExerciseClicked2"
            android:orientation="horizontal"
            android:background="@drawable/rounded_border"
            android:padding="16dp">

            <ImageView
                android:layout_width="145dp"
                android:layout_height="117dp"
                android:contentDescription="Exercise Image"
                android:scaleType="centerCrop"
                android:src="@drawable/flex"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:text="DAYANIKLILIK EGZERSİZLERİ"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="italic|bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/strengthLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onExerciseClicked3"
            android:orientation="horizontal"
            android:background="@drawable/rounded_border"
            android:padding="16dp">

            <ImageView
                android:layout_width="148dp"
                android:layout_height="125dp"
                android:contentDescription="Exercise Image"
                android:scaleType="centerCrop"
                android:src="@drawable/kuvvet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:text="KUVVET EGZERSİZLERİ"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="italic|bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flexibilityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onExerciseClicked4"
            android:orientation="horizontal"
            android:background="@drawable/rounded_border"
            android:padding="16dp">

            <ImageView
                android:layout_width="151dp"
                android:layout_height="119dp"
                android:contentDescription="Exercise Image"
                android:scaleType="centerCrop"
                android:src="@drawable/esneklik" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:text="ESNEKLİK EGZERSİZLERİ"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="italic|bold" />
        </LinearLayout>

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
